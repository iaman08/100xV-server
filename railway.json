{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd Backend/valentine_backend && bun install && bun run prisma generate"
    },
    "deploy": {
        "startCommand": "cd Backend/valentine_backend && bun run index.ts",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}