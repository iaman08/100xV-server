{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd Backend/valentine_backend && bun install && bun run build",
        "watchPatterns": [
            "Backend/valentine_backend/**"
        ]
    },
    "deploy": {
        "startCommand": "cd Backend/valentine_backend && bun run start",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}